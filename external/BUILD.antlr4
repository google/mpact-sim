load("@rules_foreign_cc//foreign_cc:defs.bzl", "cmake")

package(default_visibility = ["//visibility:public"])

filegroup(
  name = "all_srcs",
  srcs = glob(["**"]),
  visibility = ["//visibility:public"],
)

cmake(
    name = "antlr4",
    cache_entries = {
        "CMAKE_CXX_FLAGS": "-std=c++17",
    },
    generate_args = [
        "-G Ninja",
    ],
    lib_source = ":all_srcs",
    tags = ["requires-network"],
    out_static_libs = ["libantlr4-runtime.a"],
)
